load("@rules_foreign_cc//foreign_cc:defs.bzl", "meson")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

meson(
    name = "libffi",
    lib_source = ":all_srcs",
    out_shared_libs = [
        "ffi-7.dll",
    ],
    out_interface_libs = [
        "ffi.lib",
    ]
)

