load("@rules_foreign_cc//foreign_cc:defs.bzl", "meson")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

meson(
    name = "libffi",
    lib_source = ":all_srcs",
    out_interface_libs = select({
        "@platforms//os:windows": ["ffi.lib"],
        "//conditions:default": [],
    }),
    out_lib_dir = select({
        "@platforms//os:windows": "lib",
        "//conditions:default": "lib/x86_64-linux-gnu",
    }),
    out_shared_libs = select({
        "@platforms//os:windows": ["ffi-7.dll"],
        "//conditions:default": ["libffi.so.7.1.0"],
    }),
)
