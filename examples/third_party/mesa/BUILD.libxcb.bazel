load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

# TODO probably need to add hermetic python to path if it is going to use xcb-proto
configure_make(
    name = "libxcb",
    lib_source = ":all_srcs",
    deps = ["@xcb-proto"],
)
