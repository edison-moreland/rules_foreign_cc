meson_with_requirements(
    name = "mesa",
    lib_source = ":all_srcs",
    requirements = [
        requirement("mako"),
    ],
    build_data = select({
        "@bazel_tools//src/conditions:host_windows": ["@winflexbison//:flex", "@winflexbison//:bison"],
        "//conditions:default": []
    }),
    env = select({
        "@bazel_tools//src/conditions:host_windows": {
            "PATH": "$$(dirname $$EXT_BUILD_ROOT$$/$(location @winflexbison//:flex)):$$(dirname $$EXT_BUILD_ROOT$$/$(location @winflexbison//:bison))",
        },
        "//conditions:default": {},
        }),
    visibility = ["//visibility:public"]
)
