"""An openssl build file based on a snippet found in the github issue:
https://github.com/bazelbuild/rules_foreign_cc/issues/337
"""

load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

# Read https://wiki.openssl.org/index.php/Compilation_and_Installation

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

CONFIGURE_OPTIONS = [
    "no-comp",
    "no-idea",
    "no-weak-ssl-ciphers",
]

##TODO handle MSVC and mingw
configure_make(
    name = "openssl",
    configure_prefix = "perl.exe ",
    configure_command = "Configure", # or instead use configure_prefix = "perl " and configure_command is "Configure"
    configure_in_place = True,
    configure_options = ["VC-WIN64A", "no-shared", "no-comp", "no-idea", "no-weak-ssl-ciphers", "ASFLAGS=\" \""],
    # rather than adding to path, try setting PERL and NASM variables
    # set the AS variable to the path of nasm
    env = select({
        "@platforms//os:macos": {"AR": ""},
        "//conditions:default": {
            "PATH" : "$(dirname $(execpath @perl//:perl)):$(dirname $(execpath @nasm//:nasm)):$PATH",
            # unset Microsoft assembler (MASM) flags set by built-in MSVC toolchain, as NASM is unsed rather than MASM
            "CFLAGS" : "-Zi",
            },
    }),
    lib_source = ":all_srcs",
    out_static_libs = [
        "libcrypto.lib",
        "libssl.lib",
    ],
    #features = ["no_legacy_features"],
    #features = ["-default_compile_flags"],
    targets = [
        "build_libs",
        "install_dev",
    ],
    build_data = [
        "@nasm//:nasm",
        "@perl//:perl"
    ],
    copts = [""],
    visibility = ["//visibility:public"],
)

filegroup(
    name = "gen_dir",
    srcs = [":openssl"],
    output_group = "gen_dir",
    visibility = ["//visibility:public"],
)
